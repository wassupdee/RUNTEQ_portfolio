<%= form_with model: @user, data: { turbo: false } do |f| %>
  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>

  <%= f.label :notification_enabled, "LINE通知 ON" %>
  <%= f.check_box :notification_enabled %>
<% end %>

<% unless @user.authentications.exists? %>
  <%= link_to "パスワードの変更はこちらから", new_password_reset_path %>
<% end %>

