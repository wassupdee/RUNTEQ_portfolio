<div class="flex items-center justify-center min-h-screen">
  <div class="border-white border-2 rounded-md p-10">
    <div class="text-center mb-5 text-2xl text-white">
      <%= @question.text %>
    </div>

    <div class="flex flex-col items-center justify-center">
      <%= form_with url: answers_path, method: :post, data: { turbo: false } do |form| %>
        <% if @question.number.to_i == 2 %>
          <% @answers.each do |answer| %>
            <div class="hidden">
              <%= form.check_box "answer[question#{@question.number}]", { multiple: true }, answer.value, nil %>
            </div>
            <div class="btn bg-peach flex items-center justify-center mb-2 text-white">
              <%= form.label "answer[question#{@question.number}]_#{answer.value}", answer.text %>
            </div>
          <% end %>
          <div class="w-full flex justify-center">
            <div class="btn bg-white rounded-md text-black border-none shadow-2xl hover:bg-white">
            <%= form.submit '次へ' %>
          </div>
        <% else %>
          <% @answers.each do |answer| %>
            <div class="hidden">
              <%= form.radio_button "answer[question#{@question.number}]", answer.value, required: :true %>
            </div>
            <div class="btn bg-peach flex items-center justify-center mb-2 text-white">
              <%= form.label "answer[question#{@question.number}]_#{answer.value}", answer.text %>
            </div>
          <% end %>
          <div class="w-full flex justify-center">
            <div class="btn bg-white rounded-md text-black border-none shadow-2xl hover:bg-white">
              <%= form.submit '次へ' %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>