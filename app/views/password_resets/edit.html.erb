<div class="flex flex-col items-center">
    <h3 class="text-2xl font-bold py-5">パスワード再設定</h3>
    <%= form_with model: @user, url: password_reset_path(@token) do |f| %>
        <%= render 'shared/error_messages', model: f.object %>
        <div class="mb-4">
            <%= f.label :email, "メールアドレス", class: "block font-medium mb-1 text-black" %>
            <%= @user.email %>
        </div>

        <div class="mb-4">
            <%= f.label :password, "新しいパスワード", class: "block font-medium mb-1 text-black" %>
            <%= f.password_field :password, class: "w-full rounded p-2 bg-white border border-black" %>
        </div>

        <div class="mb-4">
            <%= f.label :password_confirmation, "パスワード再入力", class: "block font-medium mb-1 text-black" %>
            <%= f.password_field :password_confirmation, class: "w-full rounded p-2 bg-white border border-black" %>
        </div>
        <div class="flex justify-center">
            <%= f.submit "変更", class: "btn bg-slate-300 text-black border-none shadow-2xl" %>
        </div>
    <% end %>
</div>
