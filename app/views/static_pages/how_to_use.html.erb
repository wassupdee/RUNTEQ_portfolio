        <%= render partial: "carousel_item_pc", locals: { title: "　", image_url: "https://i.gyazo.com/84f5936d87b9d701babca798a3cb69fb.jpg", img_class: "w-[400px]" } %>
        <%= render partial: "carousel_item_pc", locals: { title: "　", image_url: "https://i.gyazo.com/6e9109353981a83615b519878fd72eb7.png", img_class: "w-[400px]" } %>
      </div>
    </div>
  </div>
</div>